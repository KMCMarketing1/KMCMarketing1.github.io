    <script>
        // JavaScript code here

        const form = document.querySelector('form');
        const resultContainer = document.querySelector('#result');
        const submitPaymentBtn = document.querySelector('#submit-payment-btn');
        const paymentReviewInfo = document.querySelector('#payment-review-info');

        form.addEventListener('submit', (e) => {
            e.preventDefault();
            const service = document.querySelector('#service').value;
            const link = document.querySelector('#link').value;
            const quantity = document.querySelector('#quantity').value;
            const phone = document.querySelector('#phone').value;

            resultContainer.textContent = `Service: ${service}, Link: ${link}, Quantity: ${quantity}, Phone Number: ${phone}`;
            submitPaymentBtn.disabled = false;
            paymentReviewInfo.textContent = 'Please review the information above before submitting the payment.';
        });
    </script>
